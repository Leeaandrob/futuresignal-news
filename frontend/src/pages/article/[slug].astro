---
import Base from "@/layouts/Base.astro";
import { Badge } from "@/components/ui/badge";
import { Card, CardContent, CardHeader } from "@/components/ui/card";
import { MarketCard } from "@/components/MarketCard";
import { ProbabilityBar } from "@/components/ProbabilityBar";
import { PulseHeaderBar } from "@/components/MarketPulse";
import { SocialSignalsSection, SignalSourceBadges } from "@/components/SocialSignalCard";
import { getArticleBySlug, getSentiment } from "@/lib/api";
import { getArticleTypeBadge, type Article } from "@/lib/types";
import { formatFullDate, formatTimeAgo, getArticleUrl } from "@/lib/utils";

// SSR: Render on each request via Cloudflare Workers
export const prerender = false;

const { slug } = Astro.params;
const [article, sentiments] = await Promise.all([
  getArticleBySlug(slug!),
  getSentiment(),
]);

if (!article) {
  return Astro.redirect("/404");
}

const typeBadge = getArticleTypeBadge(article.type);
const publishedDate = formatFullDate(article.publishedAt);
const hasMarkets = article.markets && article.markets.length > 0;
const hasSocialSignals = article.socialSignals && article.socialSignals.length > 0;

// Get the best image for the article (from first market or fallback to logo)
const primaryMarketImage = article.markets?.[0]?.image;
const articleImage = primaryMarketImage || "https://futuresignals.news/logo.png";

// JSON-LD NewsArticle Schema for Google News
const articleUrl = `https://futuresignals.news/article/${article.slug}`;
const newsArticleSchema = {
  "@context": "https://schema.org",
  "@type": "NewsArticle",
  "headline": article.title,
  "description": article.summary,
  "url": articleUrl,
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": articleUrl
  },
  "image": {
    "@type": "ImageObject",
    "url": articleImage,
    "width": 1200,
    "height": 630
  },
  "datePublished": article.publishedAt,
  "dateModified": article.updatedAt || article.publishedAt,
  "author": {
    "@type": "Organization",
    "name": "FutureSignals",
    "url": "https://futuresignals.news"
  },
  "publisher": {
    "@type": "NewsMediaOrganization",
    "name": "FutureSignals",
    "logo": {
      "@type": "ImageObject",
      "url": "https://futuresignals.news/logo.png"
    }
  },
  "articleSection": article.category,
  "keywords": article.tags?.join(", ") || article.category,
  "isAccessibleForFree": true
};
---

<Base
  title={article.title}
  description={article.summary}
  type="article"
  publishedTime={article.publishedAt}
  modifiedTime={article.updatedAt || article.publishedAt}
  section={article.category}
  tags={article.tags || []}
  jsonLd={newsArticleSchema}
>
  <article class="container py-8 max-w-4xl mx-auto">
    <!-- Market Pulse Header Bar -->
    {sentiments.length > 0 && (
      <div class="mb-6">
        <PulseHeaderBar sentiments={sentiments} currentCategory={article.category} />
      </div>
    )}

    <!-- Article Header -->
    <header class="mb-8">
      <div class="flex items-center gap-2 mb-4">
        <Badge variant={typeBadge.variant as any}>{typeBadge.label}</Badge>
        <Badge variant={article.category as any}>{article.category.toUpperCase()}</Badge>
        {article.featured && (
          <Badge variant="default">FEATURED</Badge>
        )}
      </div>

      <h1 class="headline-xl mb-4">{article.title}</h1>

      {article.subtitle && (
        <p class="text-xl text-muted-foreground mb-4">{article.subtitle}</p>
      )}

      <div class="flex items-center justify-between flex-wrap gap-4">
        <div class="flex items-center gap-4 text-sm text-muted-foreground">
          <time datetime={article.publishedAt}>{publishedDate}</time>
          <span>•</span>
          <span>{formatTimeAgo(article.publishedAt)}</span>
          {article.views > 0 && (
            <>
              <span>•</span>
              <span>{article.views} views</span>
            </>
          )}
        </div>

        <!-- Share Buttons -->
        <div class="flex items-center gap-2">
          <a
            href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(article.title)}&url=${encodeURIComponent(articleUrl)}&via=leeaandrob`}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 px-3 py-1.5 text-sm font-medium rounded-full bg-[#1DA1F2] text-white hover:bg-[#1a8cd8] transition-colors"
            title="Share on Twitter"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
            <span class="hidden sm:inline">Share</span>
          </a>
          <button
            id="copy-link-btn"
            class="inline-flex items-center gap-2 px-3 py-1.5 text-sm font-medium rounded-full border hover:bg-muted transition-colors"
            data-url={articleUrl}
            title="Copy link"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
            </svg>
            <span class="hidden sm:inline">Copy</span>
          </button>
        </div>
      </div>

      {/* Signal Sources - Show influencers who commented on this topic */}
      {hasSocialSignals && (
        <div class="mt-4 pt-4 border-t border-dashed">
          <p class="text-xs text-muted-foreground mb-2">Signals from:</p>
          <SignalSourceBadges signals={article.socialSignals!} client:load />
        </div>
      )}
    </header>

    <!-- Market Cards (if any) -->
    {hasMarkets && (
      <section class="mb-8">
        <div class="grid gap-4 md:grid-cols-2">
          {article.markets.slice(0, 2).map((market) => (
            <MarketCard market={market} variant="detailed" showCategory={false} />
          ))}
        </div>
      </section>
    )}

    <!-- Article Body -->
    <div class="prose prose-lg max-w-none">
      {/* Summary/Lede */}
      <p class="text-lg font-medium text-foreground leading-relaxed mb-8">
        {article.summary}
      </p>

      {/* What Happened */}
      {article.body?.whatHappened && (
        <section class="mb-8">
          <h2 class="text-xl font-bold mb-3 text-foreground">What Happened</h2>
          <p class="text-muted-foreground leading-relaxed">{article.body.whatHappened}</p>
        </section>
      )}

      {/* Why It Matters */}
      {article.body?.whyItMatters && (
        <section class="mb-8 p-6 bg-brand/5 border-l-4 border-brand rounded-r-lg">
          <h2 class="text-xl font-bold mb-3 text-foreground">Why It Matters</h2>
          <p class="text-muted-foreground leading-relaxed">{article.body.whyItMatters}</p>
        </section>
      )}

      {/* Context */}
      {article.body?.context && article.body.context.length > 0 && (
        <section class="mb-8">
          <h2 class="text-xl font-bold mb-3 text-foreground">Context</h2>
          <ul class="space-y-2">
            {article.body.context.map((point) => (
              <li class="flex items-start gap-2 text-muted-foreground">
                <span class="text-brand mt-1">•</span>
                <span>{point}</span>
              </li>
            ))}
          </ul>
        </section>
      )}

      {/* What to Watch */}
      {article.body?.whatToWatch && (
        <section class="mb-8 p-6 bg-muted rounded-lg">
          <h2 class="text-xl font-bold mb-3 text-foreground">What to Watch</h2>
          <p class="text-muted-foreground leading-relaxed">{article.body.whatToWatch}</p>
        </section>
      )}
    </div>

    {/* Social Signals Section */}
    {hasSocialSignals && (
      <SocialSignalsSection signals={article.socialSignals!} client:load />
    )}

    {/* Additional Markets */}
    {hasMarkets && article.markets.length > 2 && (
      <section class="mt-12 pt-8 border-t">
        <h2 class="headline-md mb-6">Related Markets</h2>
        <div class="grid gap-4 md:grid-cols-3">
          {article.markets.slice(2).map((market) => (
            <MarketCard market={market} variant="default" />
          ))}
        </div>
      </section>
    )}

    {/* Tags */}
    {article.tags && article.tags.length > 0 && (
      <section class="mt-8 pt-6 border-t">
        <div class="flex flex-wrap gap-2">
          {article.tags.map((tag) => (
            <Badge variant="secondary" className="text-xs">#{tag}</Badge>
          ))}
        </div>
      </section>
    )}

    {/* Related Articles */}
    {article.relatedArticles && article.relatedArticles.length > 0 && (
      <section class="mt-12 pt-8 border-t">
        <h2 class="headline-md mb-6">Related Stories</h2>
        <div class="grid gap-4">
          {article.relatedArticles.map((related) => (
            <a
              href={getArticleUrl(related.slug)}
              class="flex items-center gap-4 p-4 border rounded-lg hover:bg-muted/50 transition-colors"
            >
              <Badge variant={getArticleTypeBadge(related.type).variant as any} className="shrink-0">
                {getArticleTypeBadge(related.type).label}
              </Badge>
              <span class="font-medium">{related.title}</span>
            </a>
          ))}
        </div>
      </section>
    )}

    {/* Enrichment Sources */}
    {article.enrichmentSources && article.enrichmentSources.length > 0 && (
      <section class="mt-8 pt-6 border-t">
        <p class="text-xs text-muted-foreground">
          Sources: {article.enrichmentSources.join(", ")}
        </p>
      </section>
    )}

    <!-- Back to Home -->
    <nav class="mt-12 pt-8 border-t">
      <a href="/" class="text-brand hover:underline">
        ← Back to FutureSignals
      </a>
    </nav>
  </article>
</Base>

<script>
  // Copy link button functionality
  const copyBtn = document.getElementById('copy-link-btn');
  if (copyBtn) {
    copyBtn.addEventListener('click', async () => {
      const url = copyBtn.getAttribute('data-url');
      if (url) {
        try {
          await navigator.clipboard.writeText(url);
          const originalHTML = copyBtn.innerHTML;
          copyBtn.innerHTML = `
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            <span class="hidden sm:inline">Copied!</span>
          `;
          setTimeout(() => {
            copyBtn.innerHTML = originalHTML;
          }, 2000);
        } catch (err) {
          console.error('Failed to copy:', err);
        }
      }
    });
  }
</script>
