---
import Base from "@/layouts/Base.astro";
import { Badge } from "@/components/ui/badge";
import { MarketsPage } from "@/components/MarketsPage";
---

<Base
  title="All Markets"
  description="Browse all prediction markets from Polymarket. Track probabilities, volume, and market movements."
>
  <div class="container py-8">
    <!-- Header -->
    <header class="mb-8">
      <h1 class="headline-xl mb-4">All Markets</h1>
      <p class="text-lg text-muted-foreground max-w-2xl">
        Browse prediction markets from Polymarket sorted by volume and activity.
      </p>
    </header>

    <!-- Markets Feed -->
    <MarketsPage client:load />
  </div>
</Base>
