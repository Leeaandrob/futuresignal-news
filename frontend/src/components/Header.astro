---
import { DEFAULT_CATEGORIES } from "@/lib/types";

// Navigation structure - dynamic + static categories
const navItems = [
  { name: "Trending", slug: "trending", dynamic: true, icon: "trending_up" },
  { name: "Breaking", slug: "breaking", dynamic: true, icon: "bolt" },
  { name: "Politics", slug: "politics", dynamic: false, icon: "account_balance" },
  { name: "Crypto", slug: "crypto", dynamic: false, icon: "currency_bitcoin" },
  { name: "Tech", slug: "tech", dynamic: false, icon: "computer" },
  { name: "Sports", slug: "sports", dynamic: false, icon: "sports" },
];

const moreCategories = [
  { name: "Finance", slug: "finance" },
  { name: "World", slug: "world" },
  { name: "Economy", slug: "economy" },
  { name: "Elections", slug: "elections" },
  { name: "Culture", slug: "culture" },
];

const currentPath = Astro.url.pathname;
---

<header class="sticky top-0 z-50 w-full border-b bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60">
  <!-- Top bar with logo and search -->
  <div class="container flex h-14 items-center justify-between">
    <!-- Logo -->
    <a href="/" class="flex items-center gap-2">
      <img src="/logo.png" alt="FutureSignals" class="h-8 w-auto" />
      <div class="hidden sm:block">
        <span class="font-bold text-xl tracking-tight">FutureSignals</span>
        <span class="block text-xs text-muted-foreground -mt-1">
          The Bloomberg of Prediction Markets
        </span>
      </div>
    </a>

    <!-- Desktop actions -->
    <div class="hidden md:flex items-center gap-4">
      <a
        href="/markets"
        class="text-sm text-muted-foreground hover:text-foreground transition-colors"
      >
        All Markets
      </a>
      <a
        href="/about"
        class="text-sm text-muted-foreground hover:text-foreground transition-colors"
      >
        About
      </a>
    </div>

    <!-- Mobile menu button -->
    <button
      id="mobile-menu-button"
      class="md:hidden p-2 text-muted-foreground hover:text-foreground"
      aria-label="Toggle menu"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </div>

  <!-- Category navigation bar -->
  <div class="border-t bg-muted/30">
    <div class="container">
      <nav class="hidden md:flex items-center gap-1 py-2 overflow-x-auto">
        {navItems.map((item) => (
          <a
            href={`/category/${item.slug}`}
            class:list={[
              "px-3 py-1.5 text-sm font-medium rounded-md transition-colors whitespace-nowrap",
              currentPath.includes(item.slug)
                ? `bg-${item.slug}/10 text-${item.slug}`
                : "text-muted-foreground hover:text-foreground hover:bg-muted",
              item.dynamic && "flex items-center gap-1"
            ]}
          >
            {item.dynamic && item.slug === "breaking" && (
              <span class="w-2 h-2 bg-breaking rounded-full animate-pulse" />
            )}
            {item.name}
          </a>
        ))}

        <!-- Additional categories inline -->
        {moreCategories.slice(0, 3).map((cat) => (
          <a
            href={`/category/${cat.slug}`}
            class:list={[
              "px-3 py-1.5 text-sm font-medium rounded-md transition-colors whitespace-nowrap",
              currentPath.includes(cat.slug)
                ? "bg-muted text-foreground"
                : "text-muted-foreground hover:text-foreground hover:bg-muted"
            ]}
          >
            {cat.name}
          </a>
        ))}
      </nav>
    </div>
  </div>

  <!-- Mobile menu -->
  <div id="mobile-menu" class="hidden md:hidden border-t bg-background">
    <nav class="container py-4 space-y-1">
      <!-- Dynamic categories first -->
      <div class="pb-2 mb-2 border-b">
        <span class="text-xs font-semibold text-muted-foreground uppercase tracking-wider px-3">
          Live
        </span>
        <div class="mt-2 space-y-1">
          {navItems.filter(i => i.dynamic).map((item) => (
            <a
              href={`/category/${item.slug}`}
              class:list={[
                "flex items-center gap-2 px-3 py-2 text-sm font-medium rounded-md",
                currentPath.includes(item.slug)
                  ? `bg-${item.slug}/10 text-${item.slug}`
                  : "text-muted-foreground hover:text-foreground hover:bg-muted"
              ]}
            >
              {item.slug === "breaking" && (
                <span class="w-2 h-2 bg-breaking rounded-full animate-pulse" />
              )}
              {item.name}
            </a>
          ))}
        </div>
      </div>

      <!-- Static categories -->
      <div>
        <span class="text-xs font-semibold text-muted-foreground uppercase tracking-wider px-3">
          Categories
        </span>
        <div class="mt-2 space-y-1">
          {[...navItems.filter(i => !i.dynamic), ...moreCategories].map((item) => (
            <a
              href={`/category/${item.slug}`}
              class:list={[
                "block px-3 py-2 text-sm font-medium rounded-md",
                currentPath.includes(item.slug)
                  ? `bg-${item.slug}/10 text-${item.slug}`
                  : "text-muted-foreground hover:text-foreground hover:bg-muted"
              ]}
            >
              {item.name}
            </a>
          ))}
        </div>
      </div>

      <!-- Other links -->
      <div class="pt-2 mt-2 border-t space-y-1">
        <a
          href="/markets"
          class="block px-3 py-2 text-sm font-medium text-muted-foreground hover:text-foreground hover:bg-muted rounded-md"
        >
          All Markets
        </a>
        <a
          href="/about"
          class="block px-3 py-2 text-sm font-medium text-muted-foreground hover:text-foreground hover:bg-muted rounded-md"
        >
          About
        </a>
      </div>
    </nav>
  </div>
</header>

<script>
  const button = document.getElementById("mobile-menu-button");
  const menu = document.getElementById("mobile-menu");

  button?.addEventListener("click", () => {
    menu?.classList.toggle("hidden");
  });
</script>
