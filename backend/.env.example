# FutureSignals Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED: Qwen/DashScope API
# =============================================================================
# Get your API key from: https://dashscope.console.aliyun.com/
DASHSCOPE_API_KEY=your_dashscope_api_key_here

# DashScope endpoint (default: international endpoint)
DASHSCOPE_ENDPOINT=https://dashscope-intl.aliyuncs.com/compatible-mode/v1

# Qwen model for narrative generation
# Options: qwen-plus, qwen-turbo, qwen-max, qwen-long
QWEN_MODEL=qwen-plus

# =============================================================================
# SIGNAL DETECTION
# =============================================================================
# Minimum probability change to trigger a signal (0.07 = 7%)
MIN_PROBABILITY_CHANGE=0.07

# Minimum 24h volume in USD to consider a market
MIN_VOLUME_24H=50000

# How often to poll markets (Go duration format: 5m, 1h, etc.)
POLL_INTERVAL=5m

# =============================================================================
# OUTPUT
# =============================================================================
# Directory to save signal outputs
OUTPUT_DIR=./output

# Output format: json or markdown
OUTPUT_FORMAT=json

# =============================================================================
# SERVER (for future API endpoints)
# =============================================================================
HTTP_PORT=8080

# =============================================================================
# DEBUGGING
# =============================================================================
# Enable debug logging
DEBUG=false
